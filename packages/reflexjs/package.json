{
  "name": "reflexjs",
  "description": "A tiny library for creating and styling components using style props.",
  "version": "1.0.3",
  "sideEffects": false,
  "source": "src/index.ts",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prepare": "yarn prepare:index && yarn prepare:jsx-runtime && yarn prepare:jsx-dev-runtime && yarn prepare:babel && yarn prepare:cli",
    "prepare:index": "microbundle --no-compress --jsx React.createElement",
    "prepare:jsx-runtime": "microbundle --no-compress --tsconfig tsconfig.json --cwd jsx-runtime",
    "prepare:jsx-dev-runtime": "microbundle --no-compress --tsconfig tsconfig.json --cwd jsx-dev-runtime",
    "prepare:cli": "tsc src/cli.ts --outDir dist --module commonjs --skipLibCheck",
    "prepare:babel": "microbundle --no-compress -i src/babel.ts -o dist/babel.js -f cjs",
    "watch": "microbundle watch --no-compress --jsx React.createElement",
    "test": "jest"
  },
  "bin": {
    "reflexjs": "dist/cli.js"
  },
  "bugs": {
    "url": "https://github.com/reflexjs/reflexjs/issues"
  },
  "homepage": "https://github.com/reflexjs/reflexjs",
  "repository": {
    "type": "git",
    "url": "https://github.com/reflexjs/reflexjs.git",
    "directory": "packages/reflexjs"
  },
  "dependencies": {
    "@emotion/react": "^11.1.5",
    "csstype": "^3.0.7",
    "deepmerge": "^4.2.2",
    "theme-ui": "^0.6.1"
  },
  "peerDependencies": {
    "@babel/core": "^7.0.0",
    "react": "^17.0.2"
  },
  "devDependencies": {
    "@types/node": "^14.14.7",
    "minimist": "^1.2.5",
    "typescript": "^4.0.5"
  }
}
